{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block page_title %}{{ parent() }} - Inscription{% endblock %} 

{% block page_content %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal'}}) }}
    <div class="form-group">
        <div class="col-lg-12">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'To Fill'}}) }}
            {{ form_errors(form.email) }}
        </div>
    </div>   
        
    <div class="form-group">
        <div class="col-lg-12">
            {{ form_label(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'To Fill'}}) }}
            {{ form_errors(form.username) }}
        </div>
    </div>   

    <div class="form-group">
        <div class="col-lg-6">
            {{ form_label(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your password', 'value':''}  }) }}
            {% if(form_errors(form.plainPassword.first)) %}
                <div class="alert alert-danger">{{ form_errors(form.plainPassword.first) }}</div>
            {% endif %}
        </div>

        <div class="col-lg-6">
            {{ form_label(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Confirm your password', 'value':''}  }) }}
            {% if(form_errors(form.plainPassword.second)) %}
                <div class="alert alert-danger">{{ form_errors(form.plainPassword.second) }}</div>
            {% endif %}
        </div>
    </div>
            
    {{ form_rest(form) }}
    
    <div>
        ???
        <input type="submit" class="btn btn-default" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
{% endblock page_content %}