{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block page_title %}{{ parent() }} - Login{% endblock %} 

{% block page_content %}
<div class="container">
    <form action="{{ path("fos_user_security_check") }}" method="post" class="col-lg-offset-3 col-lg-6 form-horizontal">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group">
            <label for="username" class="col-sm-3 control-label">{{ 'security.login.username'|trans }}</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}" />
            </div>
        </div>
            
        <div class="form-group">
            <label for="password" class="col-sm-3 control-label">{{ 'security.login.password'|trans }}</label>
            <div class="col-sm-9">
                <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}">
            </div>
        </div>
            
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" id="_submit" name="_submit" class="btn btn-default">{{ 'security.login.submit'|trans }}</button>
            </div>
        </div>
    </form>
</div>    
{% endblock page_content %}

