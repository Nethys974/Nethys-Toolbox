<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Nethys' Toolbox{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {{ include('::core_ressources.html.twig') }}

        {% block bundle_assets %}{% endblock %}
        {% block page_assets %}{% endblock %}
    </head>
    
    <body>
        <div class="container-fluid">
            {{ include('::core_menu.html.twig') }}

            <div class="row">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div class="col-sm-2">
                    <div class="page-sidebar">
                        <div class="box-head">
                            Applications
                        </div>
                        
                        <div class="box-body">
                            {{ include('::core_sidemenu.html.twig') }}
                        </div>
                    </div>
                        
                    <div class="page-sidebar">
                        <div class="box-head">
                            Sub Applications
                        </div>
                        
                        <div class="box-body">
                        </div>
                    </div>
                </div>
                {% endif %}
                        
                <div class="col-sm-10">
                    <div class="page-centre">
                        <div class="box-head">
                            {% block page_title %}{% endblock %} 
                        </div>
                        
                        <div class="box-body">
                            <div class="page-content">
                                {{ include('::core_messages.html.twig') }}

                                {% block page_content %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="footer">
                    footer
                </div>
            </div>
        </div>
                        
        {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <script>
                $(document).ready(function(){
                    $(".page-centre").parent().removeClass("col-sm-10").addClass("col-sm-12")
                });
            </script>
        {% endif %}
    </body>
</html>
